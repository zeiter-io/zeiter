<div class="container-fluid">
  <h1 class="display-4">All Users</h1>

  <table class="table table-hover">
    <thead>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Options</th>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td>
            <%= link_to 'Details', user, class: 'btn btn-outline-primary' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>