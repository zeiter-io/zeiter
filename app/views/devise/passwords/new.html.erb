<div class="container-fluid">
  <div class="row">
    <div class="col">
      <!--1 of 3-->
    </div>

    <div class="col">

      <div class="card border-dark mb-3" style="max-width: 30rem;">
        <!--<div class="card-header">Log In</div>-->
        <div class="card-body text-dark">
          <h4 class="card-title">Forgot your password?</h4>
          <p class="card-text">
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                <% unless devise_error_messages!.blank? %>
                  <div class="alert alert-warning" role="alert"><%= devise_error_messages! %></div>
                <% end %>

              <div class="form-group">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, placeholder: 'name@domain.com', class: 'form-control' %>
                </div>

                <div class="actions">
                  <%= f.submit "Send Instructions", class: 'btn btn-primary' %>
                  <%= link_to "Cancel", root_path, class: 'btn btn-secondary' %>
                </div>
            <% end %>
          </p>
        </div>
      </div>
    </div>

    <div class="col">
      <!--3 of 3-->
    </div>
  </div>
</div>
